{
  "apps": [
    {
      "name": "backend-hijack",
      "script": "src/index.js",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "backend-hijack-updater",
      "script": "update-and-reload.js",
      "cron_restart": "*/5 * * * *",
      "autorestart": false
    }
  ]
}
