{
  "apps": [
    {
      "name": "backend-hijack",
      "script": "src/index.js",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "YOUR_SSH_USER",
      "host": "YOUR_SERVER_HOST",
      "ref": "origin/main",
      "repo": "git@github.com:Anton-ewc/backend-hijack.git",
      "path": ".",
      "post-deploy": "npm install && pm2 reload pm2.config.json --env production"
    }
  }
}
